#!/usr/bin/env sh

_mx () {
  local word=${COMP_WORDS[COMP_CWORD]}

  COMPREPLY=( $(compgen -W "$(find -E "$GOPATH/src/github.com" -type d -maxdepth 2 -mindepth 2 -iregex '.*(invisionapp|mattrmiller).*' | perl -pe "s|$GOPATH/src/github.com/.*/||g")" -- "$word") )
  COMPREPLY+=( $(compgen -W "$(find "$projects" -not -ipath "*$GOPATH*" -type d -mindepth 1 -maxdepth 1 -exec sh -c 'echo $(basename $1)' _ {} \;)" -- "$word") )
}

complete -F _mx mx
#complete -C compgen -W "$(ls -l $projects | grep '^d' | awk '{printf $NF" "}')" -- $word mx
