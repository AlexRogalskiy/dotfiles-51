#!/usr/bin/env sh

# mx
# version 0.3

# Contributors:
#   Wynn Netherland - http://github.com/pengwynn
#   Adam Jahnke - http://github.com/adamyonk

# Usage:
#   mx [session]

# To 'auto-launch' projects, you'll need a $PROJECTS directory where you keep
# code sorted like so: $PROJECTS/<repo>.
# So, a typical workflow would look like:
#   $ hub clone pengwynn/octonaut $PROJECTS/octonaut-pengwynn
#   $ mx octonaut-pengwynn

# If `mx` is called with a <session> name, and there is no valid repo inside
# $PROJECTS, a new tmux session will be initialized in the current working
# directory with a name of <session>

# If the target directory has a script/tmux file, that file will be executed
# (and sent $SESSION as the first argument, $SESSION_PATH as the second)
# instead of the default window setup (explained below). An example script/tmux
# file may look like so:
#   #!/usr/bin/env sh
#   tmux new-session -d -c "$2" -s "$1" -n editor
#   tmux send-keys "$1" C-m ":CtrlP" C-m
#   tmux new-window -n shell -t "$1"
#   tmux select-window -t "$1":1

# If there is no script/tmux file, the default window setup is as follows:
# editor  - runs $EDITOR right away
# shell   - empty shell
# console - if script/console is available
# server  - if script/server is available

set -e

if [ -z "$1" ]; then
  SESSION="${PWD##*/}"
else
  SESSION="$1"
fi

# tmux 1.9a+ doesn't like .'s in session names
SESSION_NAME="${SESSION//./_}"

_safe_window() {
  if [ -x "$2" ]; then
    tmux new-window -n "$1" -t "$SESSION_NAME" "$2"
    #tmux send-keys "$2" C-m
  fi
}

if ! (tmux list-sessions | cut -d':' -f1 | grep -q ^"$SESSION_NAME"\$); then
  if [ -d "$PROJECTS"/"$SESSION" ]; then
    SESSION_PATH="$PROJECTS"/"$SESSION"
  else
    SESSION_PATH=$PWD
  fi

  if [ -x "$PWD"/script/tmux ]; then
    "$PWD"/script/tmux "$SESSION" "$SESSION_PATH"
  else
    tmux new-session -d -c "$SESSION_PATH" -s "$SESSION_NAME" -n editor "$EDITOR"
    #tmux send-keys "$EDITOR" C-m ":CtrlP" C-m
    tmux new-window -n shell -t "$SESSION_NAME"
    _safe_window console script/console
    _safe_window server script/server
    _safe_window server script/watch
    tmux select-window -t "$SESSION_NAME":1
  fi
fi

if [ -z "$TMUX" ]; then
  tmux attach -t "$SESSION_NAME"
else
  tmux switch-client -t "$SESSION_NAME"
fi
