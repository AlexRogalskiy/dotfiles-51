#!/usr/bin/env ruby

# mwget
# Version 0.1
# Adam Jahnke - http://github.com/adamyonk
# Credit: https://coderwall.com/p/57ijqw

require 'trollop'

opts = Trollop::options do
  version '0.1'
  banner <<-EOS
Starts a multithread wget download

Usage:
  mwget [options] <url>

where [options] are:
EOS
  opt :threadcount, 'Number of threads', default: 3, type: Integer
end

url = ARGV.shift
pat = %r{^(http|https):\/\/[a-z0-9]+([\-\.]{1}[a-z0-9]+)*\.[a-z]{2,5}(:[0-9]{1,5})?(\/.*)?$}ix


Tollop::die :threadcount, 'must be 2 or more' if opts[:threadcount] < 2
#Trollop::die 'not a valid url' unless pat.match url

command = "for i in {1..#{opts[:threadcount]}}; do wget --recursive --no-parent --continue --timestamping #{url}; done;"

`#{command}`
