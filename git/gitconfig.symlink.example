[alias]
  b                 = branch
  ci                = ci-status
  co                = checkout
  d                 = diff --color-words
  dlc               = diff --cached HEAD^
  f                 = fetch
  l                 = log --abbrev-commit --color --graph --pretty=format:"%Cred%h%Creset\\ -%C(yellow)%d%Creset\\ %s\\ %Cgreen(%cr)%C(bold\\ blue)\\ <%an>%Creset"
  m                 = merge
  mypulls           = browse -- pulls/adamyonk
  pl                = pull
  ps                = push
  s                 = status --short
  safe              = !mkdir -p .git/safe && echo "Repository marked safe!"
  se                = "!git checkout $(git branch | sed 's/*/ /' | selecta)"
  standup           = log --author=\"AUTHORNAME\" --pretty=oneline --since yesterday
  sub               = submodule
  suba              = submodule add
  subf              = submodule foreach
  subu              = submodule foreach git pull origin master
  wci               = watch-ci
  wip               = "!$EDITOR $(git ls-files -m)"

[branch]
  autosetuprebase   = always

[credential]
  helper            = netrc

[color]
  branch            = auto
  diff              = auto
  status            = auto
  ui                = 1

[core]
  editor            = mvim -v
  excludesfile      = ~/.gitignore
  quotepath         = false

[fetch]
  prune             = true

[gh]
  protocol          = ssh

[ghi]
  token             = GHI_TOKEN

[github]
  user              = adamyonk

[help]
  autocorrect       = 1

[heroku]
	account           = me

[hub]
  protocol          = ssh

[include]
  path              = ~/.gitconfig.local

[init]
  templatedir       = ~/.git_template

[merge]
  ff                = false

[mergetool]
  keepbackup        = false

[pull]
  rebase            = true

[push]
  default           = tracking

[rebase]
  autosquash        = true

[rerere]
  enabled           = 1

[user]
  email             = AUTHOREMAIL
  name              = AUTHORNAME
